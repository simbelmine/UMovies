<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_item_movie_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/poster_card_corner_radius">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/poster_height_large_land">
        <ImageView
            android:id="@+id/iv_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_background"
            />
        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_color"
            android:layout_gravity="bottom"
            android:padding = "@dimen/standard_padding"
            android:layout_alignParentBottom="true"
            android:fontFamily="serif"
            android:textSize="@dimen/txt_card_size"
            android:background="@color/transparent_item_overlay"
            android:ellipsize="end"
            android:maxLines="1"
            />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>