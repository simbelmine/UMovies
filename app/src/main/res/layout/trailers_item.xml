<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_trailer_container"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="@color/video_thumbnail_bg">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_trailer_item"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_trailer_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/video_thumbnail_bg"/>
            <TextView
                android:id="@+id/tv_trailer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:background="@color/transparent_item_overlay"
                android:padding="@dimen/standard_padding"
                android:textSize="@dimen/txt_card_size"
                android:textColor="@color/main_text_color"
                tools:text="My Movie Name"/>
            <ImageView
                android:id="@+id/iv_play_icon"
                android:layout_width="@dimen/play_size"
                android:layout_height="@dimen/play_size"
                android:src="@mipmap/play_circle_outline"
                android:layout_centerInParent="true"
                android:padding="@dimen/standard_padding"/>
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:padding="@dimen/standard_padding"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>