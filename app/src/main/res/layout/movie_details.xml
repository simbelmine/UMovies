<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_blured_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparentGray900_40"/>
        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5">
                <ImageView
                    android:id="@+id/iv_tumbnail_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_image_lr"
                    android:layout_marginRight="@dimen/margin_image_lr"
                    android:layout_marginTop="@dimen/margin_image_tb"
                    android:layout_marginBottom="@dimen/margin_image_tb"/>
                <ProgressBar
                    android:id="@+id/pb_movie_img_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin">
                <LinearLayout
                    android:id="@+id/rating_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/star_on"/>
                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/tv_movie_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:paddingLeft="@dimen/standard_padding"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_movie_release_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rating_container"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_movie_synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_movie_release_date"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>