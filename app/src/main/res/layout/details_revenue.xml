<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/standard_margin">
    <TextView
        android:id="@+id/revenue_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/txt_large_size"
        android:text="@string/revenue_lbl"
        />
    <TextView
        android:id="@+id/tv_movie_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/revenue_lbl"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/txt_regular_size"
        tools:text="@string/dummy_movie_revenue"/>
</RelativeLayout>